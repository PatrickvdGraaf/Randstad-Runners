<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pew="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <FrameLayout
        android:id="@+id/parallax_holder"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center">

        <com.fmsirvent.ParallaxEverywhere.PEWImageView
            android:id = "@+id/event_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/event_placeholder4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/event_title"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:gravity="bottom|start"
            android:textColor="@android:color/white"
            android:shadowColor="@android:color/black"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="0.01"/>

    </FrameLayout>

    <TextView
        android:id="@+id/event_info"
        android:text="Placeholder information about the event"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/parallax_holder"
        android:layout_margin="10dp"/>

</RelativeLayout>